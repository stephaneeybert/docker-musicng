<VirtualHost *:80>
  ServerName dev.thalasoft.com
  ServerAlias dev.thalasoft.com
  DocumentRoot /usr/local/ngzero/www/
  CustomLog logs/ngzero.log combined
  <Directory "/usr/local/ngzero/www">
    AllowOverride All
    Require all granted
  </Directory>
  AddDefaultCharset UTF-8
</VirtualHost>

<VirtualHost *:443>
  ServerName dev.thalasoft.com
  ServerAlias dev.thalasoft.com
  DocumentRoot /usr/local/ngzero/www/
  CustomLog logs/ngzero.log combined
  <Directory "/usr/local/ngzero/www">
    AllowOverride All
    Require all granted
  </Directory>
  AddDefaultCharset UTF-8
  SSLEngine on
  SSLProxyEngine on
  SSLCertificateFile "/usr/local/ngzero/letsencrypt/current-cert.pem"
  SSLCertificateKeyFile "/usr/local/ngzero/letsencrypt/current-privkey.pem"
  SSLCertificateChainFile "/usr/local/ngzero/letsencrypt/current-chain.pem"
</VirtualHost>
